# Backend Environment Variables
# Copy this file and rename to .env, then update with your actual values

# Server Configuration
PORT=5000

# MongoDB Atlas Connection URI
# Get this from: https://cloud.mongodb.com → Connect → Connect your application
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_atlas_uri_here

# JWT Secret Key
# Generate a random string - can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# Email Service Configuration
# API key for the email service
VERIFY_API_KEY=vedjsjssdjkjjnsddjsksdbssdflsfmbjm

# Email API endpoint
EMAIL_API_URL=https://mailservice-nine.vercel.app/api/send

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:5173

# Razorpay Payment Gateway Configuration
# Get your keys from: https://razorpay.com → Settings → API Keys
# Test Mode: Use rzp_test_XXXXXXXXXX keys for development
# Live Mode: Use rzp_live_XXXXXXXXXX keys for production
RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=XXXXXXXXXXXXXXXXXXXXXXXX
